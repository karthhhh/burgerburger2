<div class="row">
  <div class="col-xs-6 text-center">
    <h2>These have yet to be devoured</h2>
    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour</button>
        </form>
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>
  <h2>These have been devoured</h2>
  <div class="col-xs-6 text-center">
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">I want another</button>
        </form>
      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>
<div class="text-center">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">
    `
    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>